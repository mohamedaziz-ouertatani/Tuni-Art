    <children>
        <Region prefHeight="100.0" prefWidth="862.0" style="-fx-background-color: FDF8DB; -fx-background-radius: 30;" />
        <Region prefHeight="56.0" prefWidth="862.0" style="-fx-background-color: FDF8DB;" />
        <ImageView fx:id="logoId" fitHeight="89.0" fitWidth="89.0" layoutX="30.0" layoutY="6.0"  pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/logo.jpg" />
            </image>
        </ImageView>
        <ImageView fitHeight="87.0" fitWidth="230.0" layoutX="130.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/tun.png" />
            </image>
        </ImageView>
        <Region layoutX="18.0" layoutY="117.0" prefHeight="469.0" prefWidth="825.0" style="-fx-background-color: #FFFFFF;" />
        <Text fx:id="uidTextId" layoutX="69.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Receive Order:">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Text>
        <AnchorPane layoutX="30.0" layoutY="165.0" prefHeight="414.0" prefWidth="805.0">
            <children>
                <ScrollPane prefHeight="414.0" prefWidth="806.0" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-background-radius: 55;">
                    <content>
                        <FlowPane fx:id="usersContainer" prefHeight="412.0" prefWidth="805.0" style="-fx-background-color: #454947; -fx-background-radius: 55; -fx-border-color: white;" />
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
        <Text layoutX="133.0" layoutY="72.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tuni'Art">
            <font>
                <Font name="Kaushan Script" size="64.0" />
            </font>
        </Text>
        <ImageView fx:id="logoutButton" fitHeight="26.0" fitWidth="20.0" layoutX="819.0" layoutY="130.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/sign-out-alt.png" />
            </image>
        </ImageView>
        <TextField fx:id="inputSearch" layoutX="586.0" layoutY="128.0" prefHeight="26.0" prefWidth="212.0" promptText="Search users &amp; artists" />
        <ChoiceBox fx:id="sortBox" layoutX="415.0" layoutY="129.0" prefHeight="26.0" prefWidth="158.0" />
        <ImageView fx:id="searchBtn" fitHeight="16.0" fitWidth="20.0" layoutX="773.0" layoutY="133.0"  pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/search-interface-symbol.png" />
            </image>
        </ImageView>
        <ImageView fx:id="sortBtn" fitHeight="27.0" fitWidth="27.0" layoutX="380.0" layoutY="130.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/sorting.png" />
            </image>
        </ImageView>
        <Region layoutX="385.0" layoutY="28.0" prefHeight="56.0" prefWidth="402.0" style="-fx-background-color: white; -fx-background-radius: 55;" />
        <HBox alignment="CENTER" layoutX="384.0" layoutY="28.0" prefHeight="56.0" prefWidth="402.0" spacing="10.0">
            <children>
                <Button fx:id="go_to_galleries" mnemonicParsing="false" style="-fx-background-color: E18B10; -fx-background-radius: 55" text="Galleries" textFill="WHITE" />
                <Button fx:id="go_to_arts" mnemonicParsing="false" style="-fx-background-color: E18B10; -fx-background-radius: 55" text="Art Pieces" textFill="WHITE" />
                <Button fx:id="go_to_users" mnemonicParsing="false" style="-fx-background-color: E18B10; -fx-background-radius: 55" text="Users" textFill="WHITE" />
                <Button fx:id="go_to_events" mnemonicParsing="false" style="-fx-background-color: E18B10; -fx-background-radius: 55" text="Events" textFill="WHITE" />
                <Button fx:id="go_to_auctions" mnemonicParsing="false" style="-fx-background-color: E18B10; -fx-background-radius: 55" text="Auctions" textFill="WHITE" />
