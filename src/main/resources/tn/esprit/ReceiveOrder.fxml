        </HBox>
        <ImageView fx:id="profilePictureId" fitHeight="37.0" fitWidth="43.0" layoutX="801.0" layoutY="38.0"  pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/pdp.jpeg" />
            </image>
        </ImageView>


        <VBox alignment="CENTER" layoutX="0.0" layoutY="60.0" prefHeight="541.0" prefWidth="794.0">
            <children>
                <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Pick it up" />
                <Button mnemonicParsing="false" onAction="#deliverItClicked" prefHeight="60.0" prefWidth="200.0" text="Deliver it" />
            </children>
        </VBox>
    </children>
</AnchorPane>
